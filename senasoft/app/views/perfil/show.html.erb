
<div style="display: flex; min-height: 100vh;">
  <%= render 'shared/sidebar' %>
  <div style="flex: 1; padding: 2rem;">
    <h1>Perfil de Usuario</h1>
    <ul>
      <li><b>Nombre:</b> <%= @persona.nombre1 %> <%= @persona.nombre2 %></li>
      <li><b>Apellido:</b> <%= @persona.apellido1 %> <%= @persona.apellido2 %></li>
      <li><b>Email:</b> <%= @persona.email %></li>
      <li><b>Número de identificación:</b> <%= @persona.numero_identificacion %></li>
      <li><b>Fecha de nacimiento:</b> <%= @persona.fecha_nacimiento %></li>
    </ul>
    <h2 style="margin-top:2rem;">Órdenes de esta persona</h2>
    <table style="width: 100%; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px #0001; border-collapse: separate; border-spacing: 0;">
      <thead>
        <tr style="background: #fafafa;">
          <th style="padding: 1rem;">Fecha de la orden</th>
          <th style="padding: 1rem;">Documento de la orden</th>
          <th style="padding: 1rem;">Número de la orden</th>
        </tr>
      </thead>
      <tbody>
        <% @persona.ordens.each do |orden| %>
          <tr style="border-bottom: 1px solid #eee;">
            <td style="padding: 1rem;"><%= orden.fecha_orden %></td>
            <td style="padding: 1rem;"><%= orden.documento %></td>
            <td style="padding: 1rem;"><%= orden.numero_orden %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
